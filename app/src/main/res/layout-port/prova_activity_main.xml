<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:contentDescription="@string/btn1desc">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/text_intro"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#FFFFFF" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_p1"
        android:src="@drawable/buttonp1"
        android:layout_marginTop="50dp"
        android:background="#ff000000"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/btn_p2"
        android:layout_alignStart="@+id/btn_p2"
        android:contentDescription="@string/btn1desc" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_p2"
        android:src="@drawable/buttonp2"
        android:background="#000000"
        android:layout_below="@+id/btn_p1"
        android:layout_alignLeft="@+id/btn_trng"
        android:layout_alignStart="@+id/btn_trng"
        android:layout_marginTop="25dp"
        android:contentDescription="@string/btn2desc" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_trng"
        android:src="@drawable/buttontraining"
        android:background="#000000"
        android:layout_below="@+id/btn_p2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:contentDescription="@string/btnTrngDesc" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_about"
        android:src="@drawable/buttonabout"
        android:background="#000000"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/btn_trng"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/btnAboutDesc" />

</RelativeLayout>