<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.unina.is2project.sensorgames" >

    <!-- Permessi di connessione e trasferimento dati via bluetooth -->
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <!-- Permessi di accensione adattatore bluetooth e di scoperta devices -->
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".AboutActivity">
        </activity>
        <activity android:name=".pong.GamePong">
        </activity>
        <activity android:name=".pong.GamePongOnePlayer">
        </activity>
        <activity android:name=".pong.GamePongTraining">
        </activity>
    </application>

</manifest>
