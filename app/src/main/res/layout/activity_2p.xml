<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_bluetooth"
        android:id="@+id/lblBluetooth"
        android:textSize="22sp"
        android:layout_gravity="left" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchBluetooth"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_enemy"
        android:id="@+id/lblEnemy"
        android:textSize="22sp"
        android:layout_gravity="left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtEnemy"
        android:textSize="22sp"
        android:text="@string/text_none"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_conn_type"
        android:id="@+id/lblConnectType"
        android:textSize="22sp"
        android:layout_gravity="left" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_secure_conn"
            android:button="@null"
            android:id="@+id/radioSecure"
            android:drawableRight="@android:drawable/btn_radio"
            android:layout_gravity="right"
            android:singleLine="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_insecure"
            android:button="@null"
            android:id="@+id/radioInsecure"
            android:drawableRight="@android:drawable/btn_radio"
            android:layout_gravity="right"
            android:checked="false" />
    </RadioGroup>

</GridLayout>