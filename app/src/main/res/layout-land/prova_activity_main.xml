<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:contentDescription="@string/btn1desc">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/text_intro"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="#FFFFFF" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_p1"
        android:src="@drawable/buttonp1"
        android:layout_marginTop="30dp"
        android:background="#ff000000"
        android:contentDescription="@string/btn1desc"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_p2"
        android:src="@drawable/buttonp2"
        android:background="#000000"
        android:contentDescription="@string/btn2desc"
        android:layout_alignTop="@+id/btn_p1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_trng"
        android:src="@drawable/buttontraining"
        android:background="#000000"
        android:contentDescription="@string/btnTrngDesc"
        android:layout_below="@+id/btn_p1"
        android:layout_alignLeft="@+id/btn_p1"
        android:layout_alignStart="@+id/btn_p1"
        android:layout_marginTop="30dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_about"
        android:src="@drawable/buttonabout"
        android:background="#000000"
        android:contentDescription="@string/btnAboutDesc"
        android:layout_alignTop="@+id/btn_trng"
        android:layout_alignLeft="@+id/btn_p2"
        android:layout_alignStart="@+id/btn_p2" />

</RelativeLayout>