<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="it.unina.is2project.sensorball.activity.StatsActivity"
    android:background="#ff000000"
    android:orientation="vertical"
    android:weightSum="1">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/stats"
        android:id="@+id/txt_stat"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/home_font"
        android:textColor="#ffffffff" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/one_player"
        android:id="@+id/txt_single"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffffff"
        android:textStyle="italic"
        android:textSize="@dimen/medium_font" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"/>

    <ListView
        android:id="@+id/listViewDemo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="0.5"></ListView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/two_player"
        android:id="@+id/txt_multi"
        android:layout_gravity="center_horizontal"
        android:textStyle="italic"
        android:textSize="@dimen/medium_font"
        android:textColor="#ffffffff" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerTwoPlayer"
        android:layout_gravity="center_horizontal"
        android:spinnerMode="dialog"
        android:textColor="#000000"
        android:background="#000000"
        android:popupBackground="#000000"
        android:gravity="center_horizontal"
        android:layout_weight="0.1"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.1">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sts_multi_play"
                android:id="@+id/textViewColGiocate"
                android:layout_column="0"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:layout_weight="0.33"
                android:textSize="@dimen/medium_font"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sts_multi_win"
                android:id="@+id/textViewColVinte"
                android:layout_column="1"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:layout_weight="0.33"
                android:textSize="@dimen/medium_font"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sts_multi_perc"
                android:id="@+id/textViewColWinningRate"
                android:layout_column="2"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:layout_weight="0.33"
                android:textSize="@dimen/medium_font"
                android:gravity="center_horizontal"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewGiocate"
                android:textColor="#ffffffff"
                android:textSize="@dimen/medium_font"
                android:layout_weight="0.33"
                android:gravity="center_horizontal"
                android:layout_column="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewVinte"
                android:textColor="#ffffffff"
                android:textSize="@dimen/medium_font"
                android:layout_weight="0.33"
                android:gravity="center_horizontal"
                android:layout_column="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewWinningRate"
                android:textColor="#ffffffff"
                android:textSize="@dimen/medium_font"
                android:layout_weight="0.33"
                android:gravity="center_horizontal"
                android:layout_column="2"/>
        </TableRow>
    </TableLayout>

</LinearLayout>
