<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/splash_name" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_p1"
        android:src="@drawable/one_player"
        android:background="#00000000"
        android:contentDescription="@string/btn1desc"
        android:layout_gravity="center_horizontal" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_p2"
        android:layout_marginTop="40dp"
        android:src="@drawable/two_player"
        android:background="#00000000"
        android:contentDescription="@string/btn2desc"
        android:layout_gravity="center_horizontal" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_trng"
        android:layout_marginTop="40dp"
        android:src="@drawable/training"
        android:background="#00000000"
        android:contentDescription="@string/btnTrngDesc"
        android:layout_gravity="center_horizontal" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_about"
        android:layout_marginTop="40dp"
        android:src="@drawable/about"
        android:background="#00000000"
        android:contentDescription="@string/btnAboutDesc"
        android:layout_gravity="center_horizontal" />
</LinearLayout>