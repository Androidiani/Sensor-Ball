<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/primary_dark_material_dark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_intro"
        android:id="@+id/lblIntro"
        android:layout_alignParentTop="true"
        android:textColor="#ffffffff"
        android:textSize="25sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_P1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/buttonp1"
        android:background="#00000000"
        android:contentDescription="@string/btn1desc" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_p2"
        android:layout_below="@+id/btn_P1"
        android:layout_alignLeft="@+id/btn_P1"
        android:layout_alignStart="@+id/btn_P1"
        android:layout_marginTop="40dp"
        android:src="@drawable/buttonp2"
        android:background="#00000000"
        android:contentDescription="@string/btn2desc" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_trng"
        android:layout_below="@+id/btn_p2"
        android:layout_alignLeft="@+id/btn_p2"
        android:layout_alignStart="@+id/btn_p2"
        android:layout_marginTop="40dp"
        android:src="@drawable/buttontraining"
        android:background="#00000000"
        android:contentDescription="@string/btnTrngDesc" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_about"
        android:layout_below="@+id/btn_trng"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/buttonabout"
        android:background="#00000000"
        android:contentDescription="@string/btnAboutDesc" />

</RelativeLayout>
